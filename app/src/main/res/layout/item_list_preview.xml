<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="#FFEEF9">

        <TextView
            android:id="@+id/productQuantityTV"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/iloscTV"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/quantityMinus"
            android:contentDescription="@string/cena"
            android:drawablePadding="2dp"
            android:minWidth="10dp" />

        <TextView
            android:id="@+id/iloscTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productCategoryTV"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:text="@string/iloscTV" />

        <TextView
            android:id="@+id/productNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/deleteButton"
            android:contentDescription="@string/nazwa_produktu"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productCategoryTV"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@+id/productNameTV"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/kategoria"
            android:drawablePadding="2dp"
            android:minWidth="10dp" />

        <TextView
            android:id="@+id/productPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/textView"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/textView"
            android:contentDescription="@string/ilosc"
            android:drawablePadding="2dp"
            android:minWidth="10dp" />

        <TextView
            android:id="@+id/storeNameTV"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@+id/iloscTV"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="@string/nazwa_sklepu"
            android:drawablePadding="2dp"
            android:minWidth="10dp" />

        <TextView
            android:id="@+id/storeAddressTV"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/textView3"
            android:contentDescription="@string/adres_sklepu"
            android:drawablePadding="2dp"
            android:minWidth="100dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productNameTV"
            android:layout_marginStart="25dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/productCategoryTV"
            android:text="@string/cenaTV" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/storeNameTV"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/storeNameTV"
            android:text="@string/przecinek" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/usun_produkt_z_listy"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="8dp"
            app:srcCompat="@android:drawable/ic_delete" />

        <ImageButton
            android:id="@+id/quantityMinus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/iloscTV"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-16dp"
            android:layout_toEndOf="@+id/iloscTV"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:srcCompat="@android:drawable/ic_menu_more"
            android:text="@string/mniejP"/>

        <ImageButton
            android:id="@+id/quantityPlus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/quantityMinus"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/productQuantityTV"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:rotation="180"
            app:srcCompat="@android:drawable/ic_menu_more"
            android:text="@string/wiecejP"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>